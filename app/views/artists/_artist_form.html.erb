<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>
<%= link_to  "back to artistts", artists_path %>
<hr />
<%= form_for [@artist] do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, required: true, autofocus: true %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, required: true, autofocus: true %>

  <%= f.label :genre%>
  <%= f.text_field :genre, required: true, autofocus: true %>

  <%= f.label :description%>
  <%= f.text_area :description, required: true, autofocus: true %>


  <%= f.submit %>
<% end %>